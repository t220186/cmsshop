@model Cms.Models.ViewModels.Pages.AdvertisementItemViewModel

@using (Html.BeginForm("AddNewAdvertisementItem","Pages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Nowy element Reklamy</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" name="IdAvertisement" value="@Model.IdAvertisement" />
        

       
        <div class="form-group">
            <label class="control-label col-md-2">Zdjęcie </label>
            <div class="col-md-10">
                <input type="file" name="file" id="imageUpload" />
                <img src="#" id="imagePrv" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LeadText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-10">
                @Html.TextAreaFor(model => model.LeadText, htmlAttributes: new { @class = "form-control" ,@rows="3" } )
                @Html.ValidationMessageFor(model => model.LeadText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinkTo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.LinkTo, Model.Products, "Wybierz Produkt", new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.LinkTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróc do listy", "Index",new { id=Model.IdAvertisement})
</div>
