@model IEnumerable<Cms.Models.ViewModels.Cart.CartViewModel>


<h2>Koszyk</h2>


@{
            int count = 1;
            //if ViewBag message is null
            if (ViewBag.Message != null)
            {
        <h3>@ViewBag.Message</h3>
            }
            else
            {

        <table class="table table-bordered table-striped  table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>

                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
        {
                <tr class="cart@(item.ProductId)">
                    <td>
                        <img src="/Images/Uploads/Products@(item.ProductId)/thumbs/@item.Image" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td class="quanty@(item.ProductId)">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)zł
                    </td>
                    <td>
                        <a href="#" class="ChangeQuantity btn btn-sm" data-me="1" data-id="@item.ProductId">
                            <svg class="bi bi-chevron-up" width="1em" height="1em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M9.646 6.646a.5.5 0 01.708 0l6 6a.5.5 0 01-.708.708L10 7.707l-5.646 5.647a.5.5 0 01-.708-.708l6-6z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                        <a href="#" class="ChangeQuantity btn btn-sm" data-me="2" data-id="@item.ProductId">
                            <svg class="bi bi-chevron-down" width="1em" height="1em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M3.646 6.646a.5.5 0 01.708 0L10 12.293l5.646-5.647a.5.5 0 01.708.708l-6 6a.5.5 0 01-.708 0l-6-6a.5.5 0 010-.708z" clip-rule="evenodd"></path>
                            </svg>


                        </a>
                        <a href="#" class="RemoveProduct btn btn-sm" data-id="@item.ProductId">
                            <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M7.5 7.5A.5.5 0 018 8v6a.5.5 0 01-1 0V8a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V8a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V8z"></path>
                                <path fill-rule="evenodd" d="M16.5 5a1 1 0 01-1 1H15v9a2 2 0 01-2 2H7a2 2 0 01-2-2V6h-.5a1 1 0 01-1-1V4a1 1 0 011-1H8a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM6.118 6L6 6.059V15a1 1 0 001 1h6a1 1 0 001-1V6.059L13.882 6H6.118zM4.5 5V4h11v1h-11z" clip-rule="evenodd"></path>
                            </svg>
                        </a>

                    </td>
                    <td class="total@(item.ProductId)">
                        @Html.DisplayFor(modelItem => item.Total)zł
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><b>Razem:</b></td>
                <td class="grandTotalVal">@ViewBag.GrandTotal</td>
            </tr>
        </table>
        <!--Form paypal -->
<div class="paypaldiv">
    @Html.Action("PaypalPartial","Cart")

   

</div>

        <!-- End Form Paypal-->
        <a href="#" class="bd-placeholder-img btn btn-primary pull-right">Zamówienie</a>
}
}