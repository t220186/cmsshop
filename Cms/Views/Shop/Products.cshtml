@model Cms.Models.ViewModels.Shop.ProductsViewModel

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name - <small>@Model.Price</small><small>zł</small></h2>

<div class="row">
    <div class="ImagePreviewBox col-xs-12 col-md-4">

        <img src="/Images/Uploads/Products@(Model.Id)/thumbs/@Model.ImageName" class="img-responsive" />

    </div> 

    <div class="col-xs-12 col-md-8">
        @Html.Raw(Model.Description)
    
        <div class="addToCart">
            <a href="#" class="addToCart btn btn-sm btn-outline-secondary">Dodaj do koszyka</a>
            <span class="loader">
                <img src="~/Content/img/2.gif" alt="Loader" />
            </span>
            <span class="ajMsg alert alert-success">
                Produkt  został dodany do koszyka
            </span>
        </div>
    </div>

    <hr/>




</div>