@model Cms.Models.ViewModels.Shop.ProductsViewModel

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name - <small>@Model.Price</small><small>zł</small></h2>

<div class="row">
    <div class="ImagePreviewBox col-xs-12 col-md-4">

        <img src="/Images/Uploads/Products@(Model.Id)/thumbs/@Model.ImageName" class="img-responsive" />

    </div> 

    <div class="col-xs-12 col-md-8">
        @Html.Raw(Model.Description)
    
        <div class="addToCart">
            <a href="#" class="addToCart btn btn-sm btn-outline-secondary" data-productid="@Model.Id">Dodaj do koszyka</a>
            <span class="loader">
                <img src="~/Content/img/2.gif" alt="Loader" />
            </span>
            <span class="ajMsg alert alert-success">
                Produkt  został dodany do koszyka
            </span>
        </div>
    </div>

    <hr/>
    
    <div class=" productsGallery">
        <div class="row"><div class="lead"><h3>Galeria zdjęć</h3></div></div>
        <div class="row">
            @foreach (var itemsImage in Model.GalleryImages)
            {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">

                    <a href="/Images/Uploads/Products@(Model.Id)/Gallery/@(itemsImage)" class="fancybox" rel="gallery1">
                        <img src="/Images/Uploads/Products@(Model.Id)/Gallery/Thumbs/@(itemsImage)" />
                        
                    </a>


                   
                    
                    
                </div>
            </div>

            }
        </div>

      

    </div>



</div>