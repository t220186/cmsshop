@model Cms.Models.ViewModels.Shop.ProductsViewModel

@{
    ViewBag.Title = Model.Name;
}
<div class="container">
    <div class="row">
        <div class="col-xs-4 col-md-2">
            <!-- Categories Partial-->
            @Html.Action("CategoryMenuPartial", "Shop")
        </div>
        <div class="col-md-10 col-xs-8 ">
            <div class="album py-5 bg-light">
               
                    <div class="col-md-12">
                        <div class="card mb-12 shadow-sm">
                            <img src="/Images/Uploads/Products@(Model.Id)/thumbs/@Model.ImageName" class="img-responsive" />

                            <div class="card-body">
                                <h3>@Model.Name </h3>
                                <hr />
                                <p class="card-text">
                                    <!-- Limit Characters of Html.Raw-->
                                    @Html.Raw(Model.Description)
                                </p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="addToCart btn btn-sm btn-outline-secondary" data-productid="@Model.Id">Dodaj do koszyka<h3> @Model.Price zł</h3></button>
                                    </div>
                                </div>


                                @if (!Model.GalleryImages.Any())
                                {

                                }
                                else
                                {
                                }
                                <div class=" productsGallery">
                                    <div class="lead"><h3>Galeria zdjęć</h3></div>
                                    <div class="row">
                                        @foreach (var itemsImage in Model.GalleryImages)
                                        {
                                            <div class="col-md-4">
                                                <div class="card mb-4 shadow-sm">

                                                    <a href="/Images/Uploads/Products@(Model.Id)/Gallery/@(itemsImage)" class="fancybox" rel="gallery1">
                                                        <img src="/Images/Uploads/Products@(Model.Id)/Gallery/Thumbs/@(itemsImage)" />

                                                    </a>





                                                </div>
                                            </div>

                                        }

                                    </div>
                                </div>
                            </div>

                        </div>
        </div>
    </div>
</div>